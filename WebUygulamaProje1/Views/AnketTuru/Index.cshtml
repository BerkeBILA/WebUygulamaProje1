@model List<AnketTuru>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}


<div class="container">
    <div class="row pt-3 pb-4">
        <div class="text-center">
            <h1>Anket Türleri</h1>
        </div>
    </div>
    <table class="table table-bordered ">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Anket Türü
                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var anketTuru in Model)
            {
                <tr>
                    <td>@anketTuru.Id</td>
                    <td>@anketTuru.Ad</td>
                    <td>
                        <a asp-controller="AnketTuru" asp-action="Guncelle" asp-route-id="@anketTuru.Id" type="button" class="btn btn-success" style="width:250px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="AnketTuru" asp-action="Sil" asp-route-id="@anketTuru.Id" type="button" class="btn btn-danger" style="width:250px">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="AnketTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Anket Oluştur
            </a>
        </div>
    </div>
</div>
